@{
    ViewData["Title"] = "Wedstrijden";    
}

<h1>Uitslagen</h1> 

<hr>

<input type="button" value="+" class="btn btn-primary" onclick="location.href='@Url.Action("Create")'" />
<br>


@foreach (var wed in @Model)
{
    <h7>@wed.Datum.ToShortDateString()</h7>
    if (wed.ThuisTeam.Contains("Liempde"))
    {
        <p><b>@wed.ThuisTeam</b> &nbsp; @wed.ThuisScore - @wed.UitScore &nbsp; @wed.UitTeam</p>
    }
    else if (wed.UitTeam.Contains("Liempde"))
    {
        <p>@wed.ThuisTeam &nbsp; @wed.ThuisScore - @wed.UitScore &nbsp; <b>@wed.UitTeam</b></p>
    }
    else
    {
        <p>@wed.ThuisTeam &nbsp; @wed.ThuisScore - @wed.UitScore &nbsp; @wed.UitTeam</p>
    }
}